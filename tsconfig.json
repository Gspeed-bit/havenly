{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./backend/types",
      "./frontend/types"
    ]
  },
  "include": ["backend/**/*.ts", "frontend/**/*.ts"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./backend/tsconfig.json" },
    { "path": "./frontend/tsconfig.json" }
  ]
}
