{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "baseUrl": ".", // Ensure this is present
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./components/*"],

    },
    "types": ["node"], // Ensure Node types are included
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["frontend/**/*.ts", "frontend/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
